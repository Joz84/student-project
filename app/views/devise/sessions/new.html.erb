<%= content_for :meta_title, "Mihivai - Se connecter" %>
<%= content_for :navbar_classes, "d-none" %>
<%= content_for :footer_classes, "d-none" %>


<div class="row vh-100">
  <div class="container d-flex flex-column align-items-center my-8 font-size-16px col-12 col-lg-5 px-8">
    <div class="mb-4">
      <%= link_to root_path, class: 'text-decoration-none' do %>
        <%= image_tag "logo.png" %>
      <% end %>
    </div>
    <h2 class="font-size-32px text-grey-dark mb-3">Heureux de vous revoir !</h2>
    <p class="text-grey">Veuillez saisir les informations de connexion</p>
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'row', data: { turbo: false } }) do |f| %>
      <div class="form-inputs d-flex flex-column gap-2">
        <%= f.input :email,
                    label: 'Email',
                    required: false,
                    label_html: { class: 'text-grey-blue' },
                    autofocus: true,
                    input_html: { autocomplete: "email", class: 'text-grey', placeholder: 'Mon email' } %>
        <%= f.input :password,
                    label: 'Mot de passe',
                    placeholder: '••••••••',
                    required: false,
                    label_html: { class: 'text-grey-blue' },
                    input_html: { autocomplete: "current-password", class: "text-grey" },
                    wrapper_html: { class: "mb-0" } %>

        <div class="d-flex justify-content-between gap-5 mb-2">
          <%#= f.input :remember_me, as: :boolean, label: "Se souvenir de moi", label_html: { class: 'text-grey-blue' } if devise_mapping.rememberable? %>
          <%= link_to 'Mot de passe oublié ?', new_password_path(resource_name), class: "text-green text-decoration-none fw-bolder" %>
        </div>
      </div>

      <div class="form-actions mt-2">
        <%= f.button :submit, "Je me connecte", class: 'fw-bolder text-white w-100 btn btn-green' %>
      </div>

      <div class="text-grey mt-3 text-center">
        Vous n’avez pas de compte ? <span class="text-green fw-bolder"><%= link_to 'Inscrivez-vous', new_registration_path(resource_name), class: "text-decoration-none text-green" %> </span>
      </div>
    <% end %>
  </div>
  <div class="col-7 d-none d-lg-flex flex-column bg-cover banner-sign-in" style="background-image: url('<%= image_path 'banner.png' %>')">
    <div>
      <h1>
        Mihivai
      </h1>
    </div>
  </div>
</div>
