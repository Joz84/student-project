<%= content_for :meta_title, "Mihivai - Créer un compte" %>
<%= content_for :navbar_classes, "d-none" %>
<%= content_for :footer_classes, "d-none" %>

<div class="container d-flex flex-column align-items-center my-8 font-size-16px">
  <div class="mb-4">
    <%= link_to root_path, class: 'text-decoration-none' do %>
      <%= image_tag "logo.png" %>
    <% end %>
  </div>
  <h2 class="font-size-32px text-grey-dark mb-4">Créer votre compte Mihivai</h2>
  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <div class="form-inputs d-flex flex-column gap-2">
      <%= f.input :email,
                  label: 'Email',
                  placeholder: 'Mon email',
                  required: false,
                  label_html: { class: 'text-grey-blue' },
                  autofocus: true,
                  input_html: { autocomplete: "email", class: 'text-grey' } %>
      <%= f.input :password,
                  label: 'Mot de passe',
                  placeholder: '••••••••',
                  required: false,
                  label_html: { class: 'text-grey-blue' },
                  input_html: { autocomplete: "current-password", class: "text-grey" } %>
      <%= f.input :password_confirmation,
                  label: 'Confirmer le mot de passe',
                  placeholder: '••••••••',
                  required: false,
                  label_html: { class: 'text-grey-blue' },
                  input_html: { autocomplete: "current-password", class: "text-grey" } %>
    </div>

    <div class="form-actions mt-2">
      <%= f.button :submit, "C’est parti !", class: 'fw-bolder text-white w-100 btn btn-green' %>
    </div>

    <div class="d-flex align-items-center justify-content-center py-3">
      <div class="flex-grow-1" style="height:2px;"></div>
      <p class="text-grey px-3 mb-0">OU</p>
      <div class="flex-grow-1" style="height:2px;"></div>
    </div>

    <div class="text-grey mt-3 text-center">
      Vous avez déjà un compte ? <span class="text-green fw-bolder"><%= link_to 'Se connecter', new_session_path(resource_name), class: "text-decoration-none text-green" %> </span>
    </div>
  <% end %>

</div>
