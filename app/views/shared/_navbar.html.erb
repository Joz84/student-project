<div class="navbar-mihivai">
  <!-- Logo -->
  <a href="/" class="navbar-mihivai-brand d-flex align-items-end">
    <%= image_tag "logo.png" %>
    <h2 class="ms-3 text-danger">UPF-LEARN</h2>
  </a>

  <div class="d-none d-md-block">
    <div class="d-flex align-items-center justify-content-between">
      <% if user_signed_in? %>
        <% if current_user.teacher %>
          <%= link_to "Espace Enseignant", teacher_teams_path, class: "navbar-mihivai-item navbar-mihivai-link" %>
          
          <div class="notifs-bg">
            <%= link_to "Messagerie", teacher_messages_path, class: "navbar-mihivai-item navbar-mihivai-link" %>
            <% if current_user.all_new_team_messages_count > 0 %>
              <div class="notifs-nbr"><%= current_user.all_new_team_messages_count %></div>
            <% end %>
          </div>
        <% end %>

        <% if current_user.team.present? && !current_user.teacher %>

          <div class="notifs-bg">
            <%= link_to "Messagerie", team_messages_path(current_user.team), class: "navbar-mihivai-item navbar-mihivai-link" %>
            <% if current_user.new_team_messages_count > 0 %>
              <div class="notifs-nbr"><%= current_user.new_team_messages_count %></div>
            <% end %>
          </div>

          <%= link_to "Ma team", project_router_path, class: "navbar-mihivai-item navbar-mihivai-link" %>
        <% end %>

        <%= link_to "Home", root_path, class: "navbar-mihivai-item navbar-mihivai-link" %>
        <%= link_to "Se déconnecter", destroy_user_session_path, data: {turbo_method: :delete} , class: "navbar-mihivai-item navbar-mihivai-link"%>
      <% else %>
        <%= link_to "S'inscrire", new_registration_path(User), class: "navbar-mihivai-item navbar-mihivai-link" %>
        <%= link_to "Se connecter", new_user_session_path , class: "navbar-mihivai-item navbar-mihivai-link"%>
      <% end %>
    </div>
  </div>

  <div class="d-block d-md-none">
    <div class="navbar-dropdown">
      <input id="toggle" type="checkbox"/>
      <label class="hamburger" for="toggle">
        <div class="top"></div>
        <div class="meat"></div>
        <div class="bottom"></div>
      </label>

      <div class="nav">
        <div class="nav-wrapper">
          <nav class= "d-flex flex-column">
            <%= link_to "Accueil", root_path, class: "navbar-link" %>
            <% if user_signed_in? %>
              
              <% if current_user.teacher %>
                <%= link_to "Espace Enseignant", teacher_teams_path, class: "navbar-link" %>
                
                <div class="notifs-bg">
                  <%= link_to "Messagerie", teacher_messages_path, class: "navbar-link" %>
                  <% if current_user.all_new_team_messages_count > 0 %>
                    <div class="notifs-nbr"><%= current_user.all_new_team_messages_count %></div>
                  <% end %>
                </div>
              <% end %>

              <% if current_user.team.present? && !current_user.teacher %>

                <div class="notifs-bg">
                  <%= link_to "Messagerie", team_messages_path(current_user.team), class: "navbar-link" %>
                  <% if current_user.new_team_messages_count > 0 %>
                    <div class="notifs-nbr"><%= current_user.new_team_messages_count %></div>
                  <% end %>
                </div>

                <%= link_to "Ma team", project_router_path, class: "navbar-link" %>
              <% end %>


              <%= link_to "home", root_path, class: "navbar-link"  %>
              <%= link_to "Se déconnecter", destroy_user_session_path, class: "navbar-link", data: {turbo_method: :delete} %>
            <% else %>
              <%= link_to "Créer un compte", new_user_registration_path, class: "navbar-link" %>
              <%= link_to "Se connecter", new_user_session_path,  class: "navbar-link" %>
            <% end %>
          </nav>
        </div>
      </div>
    </div>

  </div>
</div>

<div style="height: 70px;"></div>